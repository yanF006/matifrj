<%- include ('partials/header.ejs'); %>
<title>Alternativas</title>
<link rel="stylesheet" href="/CSS/alternativas.css">
<body>
    
    <main class="content px-3 py-2">
        <div class="container-fluid">
            <div class="mb-3 alternative-container">
                <header>
                    <h1>Alternativas</h1>
                </header>

                <!-- Formulário para adicionar alternativas -->
                <form id="alternative-form" action="#" method="post">
                    <p>Adicione sua alternativa</p>
                    <div class="form-control">
                        <input type="text" id="alternative-input" placeholder="Alternativa" name="conteudo" />
                        <button type="button" id="add-alternative">
                            <i class="fa-solid fa-plus"></i>
                        </button>
                    </div>
                </form>

                <!-- Lista dinâmica de alternativas -->
                <div id="alternative-list"></div>

                <!-- Botão Concluir -->
                <button id="conclude-button" class="btn btn-success">Concluir</button>
            </div>
        </div>
    </main>
        </div>
    </div>
    <script>
        


document.querySelectorAll(".correct-alternative").forEach(button => {
            button.addEventListener("click", function () {
                const isSelected = this.classList.contains("selected");

                // Desmarca todos os botões e ajusta data-correct para 0
                document.querySelectorAll(".correct-alternative").forEach(btn => {
                    btn.classList.remove("selected");
                    btn.setAttribute("data-correct", "0");
                });

                if (!isSelected) {
                    // Marca o botão atual e ajusta data-correct para 1
                    this.classList.add("selected");
                    this.setAttribute("data-correct", "1");
                }
            });
        });


const alternativas = [];

// Elementos do DOM
const addButton = document.getElementById("add-alternative");
const inputAlternative = document.getElementById("alternative-input");
const alternativeList = document.getElementById("alternative-list");
const concludeButton = document.getElementById("conclude-button");

// Função para renderizar as alternativas
function renderAlternatives() {
    alternativeList.innerHTML = ""; // Limpa a lista

    alternativas.forEach((alt, index) => {
        alternativeList.innerHTML += `
            <div class="alternative" data-index="${index}">
                <h3>${alt.conteudo}</h3>
                <button class="correct-alternative ${alt.correta ? 'selected' : ''}" data-index="${index}">
                    <i class="fa-solid fa-check"></i>
                </button>
                <button class="remove-alternative" data-index="${index}">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
        `;
    });
}

// Adicionar nova alternativa
addButton.addEventListener("click", () => {
    const conteudo = inputAlternative.value.trim();
    if (conteudo) {
        alternativas.push({ conteudo, correta: 0 }); // Adiciona alternativa com "correta" = 0
        inputAlternative.value = ""; // Limpa o input
        renderAlternatives(); // Atualiza a lista
    }
});

// Gerenciar eventos nos botões dinamicamente criados
alternativeList.addEventListener("click", (event) => {
    const target = event.target.closest("button");
    if (!target) return;

    const index = target.getAttribute("data-index");

    // Marcar ou desmarcar como correta
    if (target.classList.contains("correct-alternative")) {
        alternativas.forEach((alt, i) => (alt.correta = 0)); // Reseta todas as corretas
        alternativas[index].correta = alternativas[index].correta ? 0 : 1; // Alterna o valor
        renderAlternatives();
    }

    // Remover alternativa
    if (target.classList.contains("remove-alternative")) {
        alternativas.splice(index, 1); // Remove do array
        renderAlternatives();
    }
});

// Envio da lista ao backend
concludeButton.addEventListener("click", () => {
    const id_ex = "<%= id %>"; // ID do exercício

    fetch("/alternativasCreate", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ id_ex, alternativas }),
    })
        .then((response) => response.json())
        .then((data) => {
            if (data.success) {
                alert("Alternativas salvas com sucesso!");
                window.location.href = "/atividades";
            } else {
                alert(data.message);
            }
        })
        .catch((error) => {
            console.error("Erro ao enviar dados:", error);
            alert("Erro ao salvar alternativas.");
        });
});



    </script>
    <script src="/JS/script.js"></script>
